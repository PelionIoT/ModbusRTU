{
	"serialInterfaceOptions": { //Used to setup comms with Modbus slave device
		"siodev": "/dev/ttyUSB0",
		"baudrate": 19200,
		"dataBits": 8,
		"stopBits": 1,
		"parity": "none",
		"endPacketTimeout": 15
	},
	"platform": "", //Used to identify platform so that module can adapt and run automagically
	"maxTransportRetries": 1, //Transport layer retries, message retries are default to 3 so total retries will be 4
	"responseTimeout": 500, //Timeout if no data received on request (in ms)
	"modbusResourceId": "ModbusRTU", //ID on which the Modbus module will be registered with DeviceJS
	"resourceTypesDirectory": "controllers/resourceTypes", //Directory where all the resouces are or will be defined,
	"simulate": true //Should be false in production, if true it will run even if there is no terminal connected
}